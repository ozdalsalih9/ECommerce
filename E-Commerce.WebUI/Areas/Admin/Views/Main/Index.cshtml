@model IEnumerable<E_Commerce.WebUI.Areas.Admin.Controllers.MainController.PathCount>
@{
    ViewData["Title"] = "Analytics (Son 7 Gün)";
}
<div class="card">
    <div class="card-header">
        <strong>Görüntülenme toplamı:</strong> @ViewBag.Total
    </div>
    <div class="card-body">
        <table class="table table-sm table-striped align-middle">
            <thead><tr><th>Sayfa</th><th>Görüntülenme</th></tr></thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr><td>@row.Path</td><td>@row.Count</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
