@model E_Commerse.Core.Entities.Product
@{
    ViewData["Title"] = "Ürün Düzenle";
}

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Image" />
            <input type="hidden" asp-for="CreateTime" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label fw-bold"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Ana Ürün Resmi</label>
                        <input name="ImageFile" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <div class="mt-2">
                                <img src="/img/Products/MainImage/@Model.Image" height="100" class="img-thumbnail" />
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="checkbox" id="cbResmiSil" name="cbResmiSil" />
                                    <label class="form-check-label" for="cbResmiSil">Resmi Sil</label>
                                </div>
                            </div>
                        }
                        <small class="text-muted">JPEG, PNG formatında, max 5MB</small>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="control-label fw-bold"></label>
                        <div class="input-group">
                            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" required />
                            <span class="input-group-text">₺</span>
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ProductCode" class="control-label fw-bold"></label>
                        <input asp-for="ProductCode" class="form-control" required />
                        <span asp-validation-for="ProductCode" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CategoryId" class="control-label fw-bold"></label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId" required>
                                    <option value="">-- Kategori Seçin --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BrandId" class="control-label fw-bold"></label>
                                <select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandId" required>
                                    <option value="">-- Marka Seçin --</option>
                                </select>
                                <span asp-validation-for="BrandId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="OrderNo" class="control-label fw-bold"></label>
                        <input asp-for="OrderNo" class="form-control" type="number" />
                        <span asp-validation-for="OrderNo" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label fw-bold" asp-for="IsActive"></label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="IsHome" />
                        <label class="form-check-label fw-bold" asp-for="IsHome"></label>
                    </div>
                </div>
            </div>

            <!-- Ek Ürün Resimleri -->
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5>Ek Ürün Resimleri</h5>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Yeni Resimler Ekle</label>
                        <input name="Images" class="form-control" type="file" multiple accept="image/*" />
                        <small class="text-muted">Birden fazla resim seçebilirsiniz, max 5MB each</small>
                    </div>

                    @if (Model.ProductImages != null && Model.ProductImages.Any())
                    {
                        <div class="row">
                            @foreach (var image in Model.ProductImages)
                            {
                                <div class="col-md-3 mb-3">
                                    <div class="card">
                                        <img src="/img/Products/OtherImages/@image.ImagePath" class="card-img-top" alt="Ürün Resmi">
                                        <div class="card-body text-center">
                                            <button type="button" class="btn btn-sm btn-danger delete-image" data-id="@image.Id">
                                                <i class="fas fa-trash"></i> Sil
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Henüz ek resim yüklenmemiş</p>
                    }
                </div>
            </div>

            <!-- Beden ve Stok Yönetimi -->
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5>Beden ve Stok Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div id="sizeStockContainer">
                        @if (Model.ProductSizes != null && Model.ProductSizes.Any())
                        {
                            foreach (var item in Model.ProductSizes)
                            {
                                <div class="size-stock-row row mb-2">
                                    <div class="col-md-5">
                                        <select name="sizeIds" class="form-control" required>
                                            <option value="">-- Beden Seçin --</option>
                                            @foreach (var size in ViewBag.Sizes as SelectList)
                                            {
                                                <option value="@size.Value" selected="@(size.Value == item.SizeId.ToString())">@size.Text</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-5">
                                        <input type="number" name="stocks" class="form-control" placeholder="Stok Adedi"
                                               value="@item.Stock" min="0" required />
                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-danger remove-size-stock">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="size-stock-row row mb-2">
                                <div class="col-md-5">
                                    <select name="sizeIds" class="form-control" required>
                                        <option value="">-- Beden Seçin --</option>
                                        @foreach (var size in ViewBag.Sizes as SelectList)
                                        {
                                            <option value="@size.Value">@size.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-5">
                                    <input type="number" name="stocks" class="form-control" placeholder="Stok Adedi" min="0" required />
                                </div>
                                <div class="col-md-2">
                                    <button type="button" class="btn btn-danger remove-size-stock" disabled>
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                    <button type="button" id="addSizeStock" class="btn btn-sm btn-outline-primary mt-2">
                        <i class="fas fa-plus"></i> Yeni Beden Ekle
                    </button>
                </div>
            </div>

            <div class="form-group mt-4 d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Değişiklikleri Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> İptal
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <i class="fas fa-info-circle"></i> Bilgilendirme
            </div>
            <div class="card-body">
                <h6><i class="fas fa-image text-primary"></i> Resim Yönetimi</h6>
                <ul class="small">
                    <li>Ana resim ürün listesinde görünecektir</li>
                    <li>Ek resimler ürün detay sayfasında gösterilir</li>
                    <li>Resimleri silmek için ilgili butonu kullanın</li>
                </ul>
                <h6 class="mt-3"><i class="fas fa-boxes text-primary"></i> Stok Yönetimi</h6>
                <ul class="small">
                    <li>Her beden için stok miktarını güncelleyebilirsiniz</li>
                    <li>Yeni beden eklemek için "+ Yeni Beden Ekle" butonunu kullanın</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Yeni beden-stok satırı ekle
            $('#addSizeStock').click(function() {
                var newRow = $('#sizeStockContainer .size-stock-row').first().clone();
                newRow.find('select, input').val('');
                newRow.find('.remove-size-stock').prop('disabled', false);
                $('#sizeStockContainer').append(newRow);
            });

            // Beden-stok satırı sil
            $(document).on('click', '.remove-size-stock', function() {
                if ($('#sizeStockContainer .size-stock-row').length > 1) {
                    $(this).closest('.size-stock-row').remove();
                }
                if ($('#sizeStockContainer .size-stock-row').length === 1) {
                    $('#sizeStockContainer .size-stock-row .remove-size-stock').prop('disabled', true);
                }
            });

            // Ek resim silme
            $(document).on('click', '.delete-image', function() {
                if (confirm('Bu resmi silmek istediğinize emin misiniz?')) {
                    var imageId = $(this).data('id');
                    $.post('@Url.Action("DeleteImage", "Products")', { id: imageId }, function() {
                        location.reload(); // Sayfayı yenile
                    });
                }
            });

            // Resim boyutu kontrolü
            $('form').submit(function() {
                const mainImage = $('input[name="ImageFile"]')[0].files[0];
                const extraImages = $('input[name="Images"]')[0].files;
                const maxSize = 5 * 1024 * 1024; // 5MB

                if (mainImage && mainImage.size > maxSize) {
                    alert('Ana resim 5MB boyutunu aşamaz!');
                    return false;
                }

                if (extraImages) {
                    for (let i = 0; i < extraImages.length; i++) {
                        if (extraImages[i].size > maxSize) {
                            alert('Ek resimlerden biri 5MB boyutunu aşıyor!');
                            return false;
                        }
                    }
                }
                return true;
            });
        });
    </script>
}