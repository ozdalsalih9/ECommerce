@model HomePageViewModel
@{
    ViewData["Title"] = "Anasayfa";
}



<!-- Kampanya Şeridi -->
@if (Model.News != null && Model.News.Any())
{
    <div class="campaign-strip">
        <div class="campaign-marquee">
            <div class="campaign-content">
                @foreach (var news in Model.News)
                {
                    <span class="campaign-item">
                        <strong>@news.Name</strong>
                        @if (!string.IsNullOrWhiteSpace(news.Description))
                        {
                            <span class="campaign-desc">(@news.Description)</span>
                        }
                    </span>
                }
            </div>
        </div>
    </div>
}

<!-- Slider -->
<partial name="_Slider" model="Model.Sliders" />

<section class="container">
    <!-- Dikkatini Çekebilecek Ürünler -->
    <h2 class="section-title">Dikkatini Çekebilecek Ürünler</h2>
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <partial name="_ProductView" model="item" />
        }
    </div>

    <!-- En Çok Favoriye Eklenen Ürünler -->
    @if (Model.PopularProducts != null && Model.PopularProducts.Any())
    {
        <section class="mt-5">
            <h2 class="section-title">En Çok Favoriye Eklenenler</h2>
            <div class="products-row">
                @foreach (var item in Model.PopularProducts)
                {
                    <partial name="_ProductView" model="item" />
                }
            </div>
        </section>
    }
</section>
