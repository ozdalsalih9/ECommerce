@{
    ViewData["Title"] = "Şifre Sıfırlama";
    Layout = "_LayoutAuth";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <img src="/images/logo.png" alt="Logo" class="auth-logo">
            <h1 class="auth-title">Şifrenizi Sıfırlayın</h1>
            <p class="auth-subtitle">Yeni şifrenizi belirleyerek hesabınıza erişiminizi yeniden sağlayın</p>
        </div>

        <form asp-action="ResetPassword" method="post" class="auth-form">
            <input type="hidden" name="email" value="@ViewBag.Email" />
            <input type="hidden" name="code" value="@ViewBag.Code" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label for="newPassword" class="form-label">Yeni Şifre</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input name="newPassword" type="password" class="form-control" id="newPassword" placeholder="Yeni şifreniz" required>
                    <button class="btn btn-outline-secondary toggle-password" type="button">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <small class="form-text text-muted">Şifreniz en az 8 karakter uzunluğunda olmalıdır</small>
            </div>

            <div class="form-group">
                <label for="confirmPassword" class="form-label">Şifreyi Onayla</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input name="confirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Şifreyi tekrar girin" required>
                    <button class="btn btn-outline-secondary toggle-password" type="button">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
            </div>

            <div class="password-strength mt-3">
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                </div>
                <small class="strength-text">Şifre gücü: zayıf</small>
            </div>

            <button type="submit" class="btn btn-primary auth-btn mt-4">
                <i class="fas fa-sync-alt me-2"></i> Şifreyi Güncelle
            </button>
        </form>
    </div>

    <div class="auth-background">
        <div class="auth-overlay"></div>
        <div class="auth-content">
            <h2>Güvenli Şifre İpuçları</h2>
            <p>Hesabınızı korumak için güçlü bir şifre oluşturun:</p>
            <ul class="auth-benefits">
                <li><i class="fas fa-check-circle me-2"></i> Büyük ve küçük harfler kullanın</li>
                <li><i class="fas fa-check-circle me-2"></i> Rakam ve özel karakter ekleyin</li>
                <li><i class="fas fa-check-circle me-2"></i> Kişisel bilgilerinizi içermesin</li>
                <li><i class="fas fa-check-circle me-2"></i> Diğer hesaplarınızdan farklı olsun</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>

    </script>
}