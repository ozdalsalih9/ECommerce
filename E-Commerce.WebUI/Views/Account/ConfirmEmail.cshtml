@{
    ViewData["Title"] = "E-Posta Doğrulama";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        background: #f9f5fc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 15px;
    }

    .confirm-container {
        width: 100%;
        max-width: 500px;
        background: white;
        padding: 40px 30px;
        border-radius: 14px;
        box-shadow: 0 4px 20px rgba(142, 68, 173, 0.2);
        text-align: center;
        box-sizing: border-box;
    }

        .confirm-container h2 {
            color: #5c3d74;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .confirm-container p {
            font-size: 1.1rem;
            color: #333;
            margin-bottom: 25px;
        }

    .btn-home {
        background-color: #8e44ad;
        color: #fff;
        font-weight: 600;
        padding: 10px 25px;
        border-radius: 8px;
        border: none;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-home:hover {
            background-color: #a569bd;
            color: #fff;
        }
</style>

<main>
    <div class="confirm-container">
        <h2>@ViewData["Title"]</h2>

        @if (ViewBag.Message != null)
        {
            <p>@ViewBag.Message</p>
        }
        else
        {
            <p>Doğrulama işlemi sırasında bir hata oluştu. Lütfen tekrar deneyin.</p>
        }

        <a href="@Url.Action("SignIn", "Account")" class="btn-home">Giriş Sayfasına Git</a>
    </div>
</main>
