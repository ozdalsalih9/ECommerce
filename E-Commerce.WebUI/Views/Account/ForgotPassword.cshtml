@model E_Commerce.WebUI.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "_LayoutAuth";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <img src="/img/logo.png.png" alt="Logo" class="auth-logo">
            <h1 class="auth-title">Şifrenizi mi unuttunuz?</h1>
            <p class="auth-subtitle">E-posta adresinizi girerek şifre sıfırlama bağlantısı alabilirsiniz</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="ForgotPassword" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="ornek@email.com">
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary auth-btn">
                <i class="fas fa-paper-plane me-2"></i> Şifre Sıfırlama Bağlantısı Gönder
            </button>

            <div class="auth-links text-center mt-3">
                <a asp-action="SignIn" class="auth-link">
                    <i class="fas fa-arrow-left me-1"></i> Giriş Sayfasına Dön
                </a>
            </div>
        </form>
    </div>

    <div class="auth-background">
        <div class="auth-overlay"></div>
        <div class="auth-content">
            <h2>Şifre Sıfırlama İşlemi</h2>
            <p>E-posta adresinize gönderilecek bağlantı ile şifrenizi güvenle sıfırlayabilirsiniz:</p>
            <ul class="auth-benefits">
                <li><i class="fas fa-check-circle me-2"></i> Bağlantı 24 saat geçerlidir</li>
                <li><i class="fas fa-check-circle me-2"></i> Sadece kayıtlı e-posta adreslerine gönderilir</li>
                <li><i class="fas fa-check-circle me-2"></i> Güvenli şifre oluşturmanız için rehber</li>
                <li><i class="fas fa-check-circle me-2"></i> 7/24 teknik destek</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}