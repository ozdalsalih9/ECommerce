<header class="sticky-top">
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold fs-3 text-gradient" asp-controller="Home" asp-action="Index">
                <i class="me-2"></i>Selam Tekstil
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Anasayfa
                        </a>
                    </li>
                    @await Component.InvokeAsync("Categories")
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-controller="Home" asp-action="ContactUs">
                            <i class="fas fa-envelope me-1"></i>İletişim
                        </a>
                    </li>
                </ul>

                <div class="d-flex align-items-center">
                    <!-- Dil Seçici Butonlar -->
                    <div class="d-flex align-items-center me-3">
                        <form method="post" action="/Language/ChangeLanguage" class="me-2">
                            <input type="hidden" name="culture" value="tr-TR" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                            <button type="submit" class="btn btn-outline-secondary btn-sm @(System.Globalization.CultureInfo.CurrentUICulture.Name == "tr-TR" ? "active" : "")">
                                <span class="fi fi-tr me-1"></span> Türkçe
                            </button>
                        </form>

                        <form method="post" action="/Language/ChangeLanguage" class="me-2">
                            <input type="hidden" name="culture" value="en-US" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                            <button type="submit" class="btn btn-outline-secondary btn-sm @(System.Globalization.CultureInfo.CurrentUICulture.Name == "en-US" ? "active" : "")">
                                <span class="fi fi-us me-1"></span> English
                            </button>
                        </form>

                        <form method="post" action="/Language/ChangeLanguage">
                            <input type="hidden" name="culture" value="ar-SA" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                            <button type="submit" class="btn btn-outline-secondary btn-sm @(System.Globalization.CultureInfo.CurrentUICulture.Name == "ar-SA" ? "active" : "")">
                                <span class="fi fi-sa me-1"></span> العربية
                            </button>
                        </form>
                    </div>


                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item me-2">
                                <a class="nav-link position-relative p-1 px-2 d-flex align-items-center" asp-controller="Favorite" asp-action="Index">
                                    <div class="position-relative">
                                        <i class="fas fa-heart fa-lg" style="font-size: 1.25rem;"></i>
                                        <span id="favoriteCountBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none; font-size: 0.65rem;"></span>
                                    </div>
                                </a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="avatar-sm me-2">
                                        <div class="avatar-initials bg-primary text-white rounded-circle d-flex align-items-center justify-content-center">
                                            @User.Identity.Name.Substring(0, 1).ToUpper()
                                        </div>
                                    </div>
                                    <span class="d-none d-lg-inline">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Favorite" asp-action="Index">
                                            <i class="fas fa-heart me-2 text-danger"></i>Favorilerim
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="SignOut">
                                            <button type="submit" class="dropdown-item py-2">
                                                <i class="fas fa-sign-out-alt me-2 text-muted"></i>Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-primary rounded-pill px-3" style="color: #6f42c1; border-color: #6f42c1;" asp-controller="Account" asp-action="SignIn">
                                    <i class="fas fa-sign-in-alt me-1"></i> Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn rounded-pill px-3 text-white" style="background-color: #6f42c1;" asp-controller="Account" asp-action="SignUp">
                                    <i class="fas fa-user-plus me-1"></i> Kayıt Ol
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>