<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Selam Tekstil</title>

    <!-- Favicon -->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-pVhQh6DCi6t8FwQDCmTxjzVmRZfAnBkR4Z80wq6jxXGg4M9mc1lXW2VzY2p9Ik9D3yZYxLJ3Ih0xgRjk1N5V0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Ekstra Kütüphaneler -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@6.6.6/css/flag-icons.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />



    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product-card.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home-index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/signup.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forgotpassword.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ResetPassword.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/confirmemail.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/favorite-index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product-details.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/category-index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/slider.css" asp-append-version="true" />

    @await RenderSectionAsync("Head", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Kampanya Şeridi -->
    @if (ViewBag.NewsList != null && ((List<News>)ViewBag.NewsList).Count > 0)
    {
        <div class="campaign-strip">
            <div class="campaign-marquee">
                <div class="campaign-content">
                    @foreach (var news in ViewBag.NewsList)
                    {
                        <span class="campaign-item">
                            <strong>@news.Name</strong>
                            @if (!string.IsNullOrWhiteSpace(news.Description))
                            {
                                <span class="campaign-desc">(@news.Description)</span>
                            }
                        </span>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Header -->
    <partial name="_Header" />

    <!-- Main Content -->
    <main class="flex-fill">
        <div class="container-fluid px-0 px-md-3">
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </main>

    <!-- Footer -->
    <partial name="_Footer" />

    <!-- Bildirimler -->
    @if (TempData["ContactSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show position-fixed bottom-0 end-0 m-4" role="alert" style="z-index:9999;">
            @TempData["ContactSuccess"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ContactError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show position-fixed bottom-0 end-0 m-4" role="alert" style="z-index:9999;">
            @TempData["ContactError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Back to Top Button -->
    <button id="backToTop" class="btn shadow" title="Yukarı Çık">
        <i class="fas fa-arrow-up"></i>
    </button>

    <!-- JS Kütüphaneleri -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/product-card.js" asp-append-version="true"></script>
    <script src="~/js/header.js" asp-append-version="true"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script src="~/js/favorite-index.js" asp-append-version="true"></script>
    <script src="~/js/product-details.js" asp-append-version="true"></script>
    <script src="~/js/footer.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
