@model E_Commerse.Core.Entities.Product
<div class="col-lg-3 col-md-6 col-sm-6 mb-4">
    <div class="card product-card border-0 shadow-sm rounded-4 h-100 position-relative overflow-hidden">
        <!-- "Yeni" etiketi -->
        @if (Model.CreateTime > DateTime.Now.AddDays(-7))
        {
            <span class="badge new-badge bg-gradient-to-r from-yellow-400 to-orange-500 text-dark px-3 py-2 rounded-pill">
                <i class="fas fa-star me-1"></i> Yeni
            </span>
        }

        <!-- Ürün görseli -->
        <div class="product-image-container">
            <a asp-action="Details" asp-controller="Product" asp-route-id="@Model.Id">
                <img src="/img/Products/MainImage/@Model.Image"
                     class="card-img-top rounded-4 product-image"
                     alt="@Model.Name"
                     loading="lazy">
            </a>
            <!-- Favori ikonu -->
            <button class="btn favorite-btn position-absolute top-3 end-3 bg-white rounded-circle shadow-sm p-2"
                    title="Favorilere Ekle">
                <i class="far fa-heart text-purple"></i>
            </button>
        </div>

        <div class="card-body text-center d-flex flex-column">
            <!-- Ürün adı -->
            <a asp-action="Details" asp-controller="Product" asp-route-id="@Model.Id"
               class="text-decoration-none text-dark">
                <h6 class="fw-semibold product-title mb-2">@Model.Name</h6>
            </a>

           

            <!-- Açıklama -->
            <p class="text-muted small mb-3 flex-grow-1">
                @(Model.Description.Length > 60 ? Model.Description.Substring(0, 60) + "..." : Model.Description)
            </p>

            <!-- Bedenler -->
            @if (Model.ProductSizes != null && Model.ProductSizes.Any())
            {
                <div class="mb-3 d-flex justify-content-center flex-wrap gap-1">
                    @foreach (var size in Model.ProductSizes.Where(s => s.Stock > 0).Take(4))
                    {
                        <span class="badge size-badge">
                            @size.Size.Name
                            @if (size.Stock < 5)
                            {
                                <span class="text-danger">(@size.Stock)</span>
                            }
                        </span>
                    }
                    @if (Model.ProductSizes.Count(s => s.Stock > 0) > 4)
                    {
                        <span class="badge size-badge">+@(Model.ProductSizes.Count(s => s.Stock > 0) - 4)</span>
                    }
                </div>
            }

            <!-- Sepete Ekle -->
            <div class="d-grid gap-2 mt-auto">

                <button class="btn btn-outline-purple w-100 py-2"
                        onclick="window.location.href='/Product/Details/@Model.Id'">
                    <i class="fas fa-eye me-2"></i> İncele
                </button>
            </div>
        </div>
    </div>
</div>



