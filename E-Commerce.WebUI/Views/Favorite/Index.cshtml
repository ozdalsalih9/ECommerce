@model IEnumerable<Favorite>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    ViewData["Title"] = "Favorilerim";
    var token = Xsrf.GetAndStoreTokens(Context).RequestToken;
}

<input type="hidden" id="RequestVerificationToken" value="@token" />



<div class="container mt-4">
    <h2 class="mb-3">Favorilerim</h2>
    <hr />

    <div id="favorites-container">
        @if (!Model.Any())
        {
            <div class="empty-favorites">
                <i class="fas fa-heart-broken"></i>
                <div>Favori listeniz şu anda boş.</div>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-sm-6 mb-4" id="favorite-@item.Id">
                        <div class="card favorite-card h-100">
                            <img src="/img/Products/MainImage/@item.Product.Image" class="card-img-top favorite-img" alt="@item.Product.Name" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-3">@item.Product.Name</h5>

                                <div class="mt-auto d-flex justify-content-between gap-2">
                                    <button class="btn btn-favorite-remove w-50 remove-favorite"
                                            data-favorite-id="@item.Id">
                                        <i class="fas fa-trash-alt me-1"></i> Kaldır
                                    </button>
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Product.Id"
                                       class="btn btn-details w-50">
                                        <i class="fas fa-search me-1"></i> İncele
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>


