@model IEnumerable<Favorite>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    ViewData["Title"] = "Favorilerim";
    var token = Xsrf.GetAndStoreTokens(Context).RequestToken;
}

<input type="hidden" id="RequestVerificationToken" value="@token" />

<h2 class="mt-3">Favorilerim</h2>
<hr />

<!-- CSS kodları aynı kalıyor -->

<div id="favorites-container">
    @if (!Model.Any())
    {
        <div class="empty-favorites">
            <div class="alert alert-info text-center w-100">Favori listeniz boş.</div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4" id="favorite-@item.Id">
                    <div class="card h-100">
                        <img src="/img/Products/MainImage/@item.Product.Image" class="card-img-top" alt="@item.Product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@item.Product.Name</h5>
                            <p class="card-text">@item.Product.Price.ToString("C2")</p>
                            <button class="btn btn-danger remove-favorite"
                                    data-favorite-id="@item.Id">
                                Favorilerden Kaldır
                            </button>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Product.Id"
                               class="btn btn-primary mt-2">Ürünü İncele</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Anti-forgery token için header ayarı
            $.ajaxSetup({
                headers: {
                    'RequestVerificationToken': $('#RequestVerificationToken').val()
                }
            });

            $(document).on('click', '.remove-favorite', function () {
                const favoriteId = $(this).data('favorite-id');
                const cardElement = $(this).closest('.col-md-4');
                const productName = $(this).siblings('.card-title').text();

                if (!confirm(productName + ' ürününü favorilerden kaldırmak istediğinize emin misiniz?')) {
                    return;
                }

                $.ajax({
                    url: '/Favorite/Remove',
                    type: 'POST',
                    data: { favoriteId: favoriteId },
                    success: function (response) {
                        if (response.success) {
                            cardElement.fadeOut(300, function () {
                                $(this).remove();
                                checkEmptyFavorites();
                                updateFavoriteCount();
                            });
                            toastr.success(response.message);
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function (xhr) {
                        toastr.error('İşlem sırasında bir hata oluştu: ' + xhr.responseText);
                    }
                });
            });

            function checkEmptyFavorites() {
                if ($('#favorites-container .col-md-4').length === 0) {
                    $('#favorites-container').html(`
                        <div class="empty-favorites">
                            <div class="alert alert-info text-center w-100">Favori listeniz boş.</div>
                        </div>
                    `);
                }
            }

            function updateFavoriteCount() {
                $.get('/Favorite/GetFavoriteCount', function (data) {
                    const badge = $('#favoriteCountBadge');
                    if (data.count > 0) {
                        badge.text(data.count).show();
                    } else {
                        badge.hide();
                    }
                });
            }
        });
    </script>
}